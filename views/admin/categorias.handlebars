<h3>Lista de categorias: </h3>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3 ">Editar categoria</button></a>
        </div>
    </div>

{{/each}}